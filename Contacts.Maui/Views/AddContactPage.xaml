<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Contacts.Maui.Views.AddContactPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Contacts.Maui.Views.Controls"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="Add Contact">

    <VerticalStackLayout>

        <controls:ContactControl
            x:Name="contactCtrl"
            OnCancel="contactCtrl_OnCancel"
            OnError="contactCtrl_OnError"
            OnSave="contactCtrl_OnSave" />
    </VerticalStackLayout>
</ContentPage>